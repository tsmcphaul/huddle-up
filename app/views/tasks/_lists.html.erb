<table class="table table-dark table-striped table-hover">
  <thead>
    <tr>  
      <th scope="col">Project</th>
      <th scope="col">Task</th>
      <th scope="col">Detail</th>
      <th scope="col">Task Owner</th>
      <th scope="col">Finished?</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task|%>
      
      <td><%= task.project.name if task.project %></td>
      <td><%= link_to task.name, task_path(task) %></td>
      <td><%= task.detail %></td>
      <td><%= link_to task.user.name, user_tasks_path(task.user) %></td>
      <td><%= task.finished %></td>
      <td> <%= link_to 'Edit', edit_task_path(task)%>
    </tr>
    <% end %>
  </tbody>
</table>